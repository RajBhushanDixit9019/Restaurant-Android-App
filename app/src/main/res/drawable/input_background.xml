<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android" android:shape="rectangle">
    <!-- Background with gradient -->
    <gradient
        android:angle="0"
        android:startColor="@color/input_background_start"
        android:endColor="@color/input_background_end" />

    <!-- Border with soft rounded corners -->
    <stroke
        android:width="2dp"
        android:color="@color/input_border_color" />

    <!-- Rounded corners -->
    <corners android:radius="12dp" />

    <!-- Inner padding for a cleaner look -->
    <padding
        android:left="12dp"
        android:top="10dp"
        android:right="12dp"
        android:bottom="10dp" />
</shape>
