<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="@color/background_color">

    <!-- Title for the Activity -->
    <TextView
        android:id="@+id/txtManageOrdersTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Manage Orders"
        android:textSize="24sp"
        android:textColor="@color/primary_text_color"
        android:textStyle="bold"
        android:layout_marginBottom="24dp"
        android:layout_gravity="center"/>

    <!-- RecyclerView to show list of orders -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerViewOrders"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_marginBottom="16dp"
        android:layout_gravity="center"/>

    <!-- Button to refresh orders -->
    <Button
        android:id="@+id/btnRefreshOrders"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Refresh Orders"
        android:textColor="@android:color/white"
        android:background="@drawable/button_background"
        android:layout_marginBottom="16dp"/>

    <!-- Button to navigate to order details (optional) -->
    <Button
        android:id="@+id/btnOrderDetails"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="View Order Details"
        android:textColor="@android:color/white"
        android:background="@drawable/button_background"/>

</LinearLayout>
