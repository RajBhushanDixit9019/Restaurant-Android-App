<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Splash Screen Theme -->
    <style name="Theme.Splash" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Set the background for the splash screen -->
        <item name="android:windowBackground">@drawable/splash_screen_background</item>

        <!-- Custom status bar and text colors -->
        <item name="android:statusBarColor">@color/splash_status_bar_color</item>
        <item name="android:textColor">@color/splash_text_color</item>
    </style>

    <!-- Default App Theme -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Primary and accent colors for the app -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

        <!-- Default background color -->
        <item name="android:background">@color/background_color</item>

        <!-- Button text style -->
        <item name="android:buttonStyle">@drawable/button_background</item>
    </style>
</resources>
