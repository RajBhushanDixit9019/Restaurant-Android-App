<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.restaurantapp">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/Theme.AppCompat.Light.NoActionBar">

        <!-- Splash Activity -->
        <activity
            android:name=".activities.SplashScreenActivity"
            android:theme="@style/Theme.Splash"
            android:label="app_name"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- Main Activity -->
        <activity
            android:name=".activities.MainActivity"
            android:label="app_name"
            android:exported="true" />

        <!-- Login Activity -->
        <activity
            android:name=".activities.LoginActivity"
            android:label="Login"
            android:exported="true" />

        <!-- Registration Activity -->
        <activity
            android:name=".activities.CustomerRegistrationActivity"
            android:label="Register"
            android:exported="true" />

        <!-- Admin Dashboard Activity -->
        <activity
            android:name=".admin.AdminDashboardActivity"
            android:label="Admin Dashboard"
            android:exported="true" />
        <activity
            android:name=".admin.ManageMenuActivity"
            android:label="Manage Menu"
            android:exported="true" />
        <activity
            android:name=".admin.ManageUsersActivity"
            android:label="Manage Users"
            android:exported="true" />
        <activity
            android:name=".admin.ViewReportsActivity"
            android:label="View Reports"
            android:exported="true" />

        <!-- Chef Dashboard Activity -->
        <activity
            android:name=".chef.ChefDashboardActivity"
            android:label="Chef Dashboard"
            android:exported="true" />
        <activity
            android:name=".chef.MarkOrderCompleteActivity"
            android:label="Mark Order Complete"
            android:exported="true" />
        <activity
            android:name=".chef.ViewOrdersActivity"
            android:label="View Orders"
            android:exported="true" />

        <!-- Customer Dashboard Activity -->
        <activity
            android:name=".customer.CustomerDashboardActivity"
            android:label="Customer Dashboard"
            android:exported="true" />
        <activity
            android:name=".customer.OrderHistoryActivity"
            android:label="Order History"
            android:exported="true" />
        <activity
            android:name=".customer.ViewMenuActivity"
            android:label="View Menu"
            android:exported="true" />

    </application>

</manifest>
